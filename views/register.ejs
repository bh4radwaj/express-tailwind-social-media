<%- include ('./header') %>
  <div class="text-gray-700">
    <div class="ml-5 mr-5 lg:px-64">
      <form action="/register" class="p-4 pb-4 mb-4 bg-white rounded shadow-lg bg-opacity-50" method="POST">
        <div class="flex justify-center pb-4">
          <!-- <img src="./profile.png" alt="" class="w-24 pr-2"> -->
          <div class="font-mono text-lg text-3xl font-bold text-gray-800">sign-up</div>
        </div>
        <label class="block font-mono text-gray-700">Email</label>
        <div class="pb-4 mb-3">
           <input type="email" name="email" class="w-full px-2 py-2 leading-tight text-gray-700 bg-white border rounded shadow appearance-none focus:border-blue-300 bg-opacity-50" placeholder="Enter email id"> 
        </div>
        <label class="block font-mono text-gray-700">Username</label>
        <div class="pb-4 mb-3">
          <input type="text" name="uid" class="w-full px-2 py-2 leading-tight text-gray-700 bg-white border rounded shadow appearance-none focus:border-blue-300 bg-opacity-50" placeholder="Enter Username"> 
       </div>
        <div class="pb-4 mb-3">
          <label class="block font-mono text-gray-700">Password</label>
          <input type="password" name="password" class="w-full px-2 py-2 leading-tight text-gray-700 bg-white border rounded shadow appearance-none focus:border-blue-300 mb bg-opacity-50" placeholder="Enter Password">
          <!-- <span class="font-medium text-red-600">fill this field</span> --> 
        </div>
        <div class="pb-4 mb-3">
          <label class="block font-mono text-gray-700">Confirm</label>
          <input name="confirm" type="password" class="w-full px-2 py-2 leading-tight text-gray-700 bg-white border rounded shadow appearance-none focus:border-blue-300 mb bg-opacity-50" placeholder="re enter password">
          <!-- <span class="font-medium text-red-600">fill this field</span> -->
        </div>
        <div class="pb-4 ">
          <input class="px-2 py-1 font-sans text-lg text-white bg-blue-700 border vh rounded-md" type="submit" value="sing-up">
          <a href="/login" class="float-right mt-1 text-sm font-bold text-blue-800">already have an account?</a>
        </div>
      </form>
    </div>
  
  </div>
